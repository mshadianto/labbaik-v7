# =============================================================================
# LABBAIK AI v7.3 - Streamlit Cloud Secrets
# =============================================================================
# Copy this content to Streamlit Cloud → App Settings → Secrets
# =============================================================================

# =============================================================================
# ADMIN CREDENTIALS (REQUIRED for first-time setup)
# =============================================================================
# Admin will be auto-created on first app startup
ADMIN_EMAIL = "your_admin_email@example.com"
ADMIN_PASSWORD = "your_secure_password_here"
ADMIN_NAME = "Admin"

# =============================================================================
# Database - Neon PostgreSQL (optional, uses SQLite if not set)
# =============================================================================
DATABASE_URL = "postgresql://user:password@host/database?sslmode=require"

# =============================================================================
# AI Services
# =============================================================================
GROQ_API_KEY = "gsk_YOUR_GROQ_API_KEY_HERE"
OPENAI_API_KEY = "sk-your_openai_api_key_here"

# =============================================================================
# App Settings
# =============================================================================
LABBAIK_ENV = "production"
APP_NAME = "LABBAIK AI"
APP_VERSION = "7.3.0"
